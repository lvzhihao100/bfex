<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="30pt"
    android:paddingStart="30pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="提现地址"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="asdasdasdasdasdasdasdasdasd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_title"
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="提现数量"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="250pt"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="1000USTD" />

        <TextView
            android:layout_width="100pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="状态"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="250pt"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="充值成功" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sxf"
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sxf_title"
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="手续费"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_sxf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="2018/04/15 15:11" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_submit_time_title"
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="提交时间"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_submit_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="2018/04/15 15:11" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_check_time"
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_check_time_title"
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="审核时间"
            android:textColor="@color/colorHintTextShow"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_check_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28pt"
            tools:text="2018/04/15 15:11" />

    </LinearLayout>

