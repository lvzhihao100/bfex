<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/BigTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80pt"
            android:gravity="center"
            android:paddingStart="30pt"
            android:text="手机验证" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="114pt"
            android:layout_marginTop="42pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30pt"
                android:gravity="center_vertical"
                android:text="手机"
                android:textColor="@color/colorDarkGreen"
                android:textSize="30pt" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30pt"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorHintLine" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="114pt"
            android:layout_marginTop="42pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30pt"
                android:gravity="center_vertical"
                android:text="短信验证"
                android:textColor="@color/colorDarkGreen"
                android:textSize="30pt" />

            <Switch
                android:id="@+id/sms_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30pt"
                android:switchMinWidth="20dp"
                android:textOff="  "
                android:textOn="  "
                android:thumb="@drawable/selector_thumb"
                android:track="@drawable/selector_track" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
