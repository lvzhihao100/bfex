<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171pt"
        android:background="@mipmap/jjr_up"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="51pt"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="30pt"-->
            <!--tools:text="推广客户" />-->

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20pt"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="20pt"-->
            <!--tools:text="推广客户获得海量佣金，每天赚不停" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121pt"
        android:background="#1D1D1D"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all_person_num"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28pt"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_today_money"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28pt"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_all_money"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28pt"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="累计开户"
                android:textColor="@color/white"
                android:textSize="28pt" />

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28pt"
                android:text="今日收益" />

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28pt"
                android:text="累计收益" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="9pt" />

    <LinearLayout
        android:id="@+id/ll_spread"
        android:layout_width="match_parent"
        android:layout_height="101pt"
        android:orientation="horizontal"
        android:paddingEnd="32pt"
        android:background="#1D1D1D"

        android:paddingStart="30pt">

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="我要推广"
            android:textColor="@color/white"
            android:textSize="28pt" />

        <ImageView
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/my_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt" />

    <LinearLayout
        android:background="#1D1D1D"

        android:id="@+id/ll_custom"
        android:layout_width="match_parent"
        android:layout_height="101pt"
        android:orientation="horizontal"
        android:paddingEnd="32pt"
        android:paddingStart="30pt">

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="我的客户"
            android:textColor="@color/white"
            android:textSize="28pt" />

        <ImageView
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/my_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt" />

    <LinearLayout
        android:background="#1D1D1D"

        android:id="@+id/ll_money_detail"
        android:layout_width="match_parent"
        android:layout_height="101pt"
        android:orientation="horizontal"
        android:paddingEnd="32pt"
        android:paddingStart="30pt">

        <TextView
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="佣金明细"
            android:textColor="@color/white"
            android:textSize="28pt" />

        <ImageView
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/my_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt" />

</LinearLayout>