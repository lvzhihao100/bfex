<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.sskj.bfex.common.widget.ToolBarLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_img="@mipmap/icon_logout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"

                    android:drawableLeft="@mipmap/icon_avatar"
                    android:drawablePadding="@dimen/space_10"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_30"
                    android:textStyle="bold"
                    tools:text="177****0000" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_80"
                    android:layout_marginTop="@dimen/space_6"
                    android:textColor="@color/text_color"
                    tools:text="@string/user_id" />

            </RelativeLayout>

            <TextView
                android:id="@+id/mine_user_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@color/colorTradeBg"
                android:gravity="center"
                android:paddingTop="@dimen/space_15"
                android:textColor="#f9fcfe"
                android:textSize="@dimen/txt_28"
                android:textStyle="bold"
                tools:text="99999.99" />

            <TextView
                android:id="@+id/mine_property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@color/colorTradeBg"
                android:gravity="center|top"
                android:paddingBottom="@dimen/space_15"
                android:textColor="#f9fcfe"
                android:textSize="@dimen/txt_12"
                tools:text="账户资产（USDT）" />

            <include
                android:id="@+id/include_grzx"
                layout="@layout/layout_item_mine" />

            <include
                android:id="@+id/include_aqzx"
                layout="@layout/layout_item_mine" />

              <include
                  android:id="@+id/include_zcgl"
                  layout="@layout/layout_item_mine" />

            <!--<include-->
                <!--android:id="@+id/include_zhcz"-->
                <!--layout="@layout/layout_item_mine" />-->

            <include
                android:id="@+id/include_tbdz"
                layout="@layout/layout_item_mine" />

            <include
                android:id="@+id/include_yqhy"
                layout="@layout/layout_item_mine" />

            <include
                android:id="@+id/include_hqzx"
                layout="@layout/layout_item_mine" />

            <include
                android:id="@+id/include_gywm"
                layout="@layout/layout_item_mine" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>